<?xml version="1.0"?>
<!DOCTYPE suppressions PUBLIC
    "-//Checkstyle//DTD SuppressionFilter Configuration 1.2//EN"
    "https://checkstyle.org/dtds/suppressions_1_2.dtd">

<suppressions>
    <!-- Spring @Service classes cannot be final due to CGLIB proxying requirement -->
    <suppress checks="DesignForExtension" files=".*ServiceImpl\.java$"/>

    <!-- Test code relaxations (production code remains strict) -->
    <suppress checks="MagicNumber" files=".*/src/test/.*"/>
    <suppress checks="JavadocVariable" files=".*/src/test/.*"/>
    <suppress checks="JavadocMethod" files=".*/src/test/.*"/>
    <suppress checks="JavadocPackage" files=".*/src/test/.*"/>
</suppressions>
